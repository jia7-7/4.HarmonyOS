import { InputMethodListDialog } from '@ohos.inputMethodList'
import { functionalButtonComponentManager } from '@kit.ScenarioFusionKit'
import { font } from '@kit.ArkUI'

@Extend(TextInput)
function inputstyle(){
  .placeholderColor('#99182413')
  .height(45)
  .fontSize(18)
  .backgroundColor('#F1F3F5')
  .width('100%')
  .margin({top:12})
}
@Extend(Line)
function linestyle(){
  .width('100%')
  .height(1)
  .backgroundColor('#33182431')
}
@Extend(Text)
function bluetext(){
  .fontColor('#007DFF')
  .fontSize(14)
  .fontWeight(FontWeight.Medium)
}
@Entry
@Component
struct loginpage{
  @Builder
  imagebutton(src:Resource){
    Button({type:ButtonType.Circle,stateEffect:true}){
      Image($r('app.media.login_method1'))
    }
    .height(48)
    .width(48)
    .backgroundColor('#F1F3F5')
  }
  build() {
    Column(){
      Image($r('app.media.logo'))
        .width(78)
        .height(78)
        .margin({top:150,bottom:8})
        Text('登录界面')
          .fontSize(24)
          .fontWeight(FontWeight.Medium)
          .fontColor('#182431')
        Text('登录账号可以使用更多服务')
          .fontSize(16)
          .fontColor('#99182431')
          .margin({bottom:30,top:8})
      TextInput({placeholder:'账号'})
        .type(InputType.Number)
        .maxLength(11)
        .inputstyle()
      Line()
        .linestyle()
      TextInput({placeholder:'密码'})
        .type(InputType.Password)
        .maxLength(8)
        .inputstyle()
      Line()
        .linestyle()
      Row(){
        Text('短信验证码登录')
          .bluetext()
        Text('忘记密码')
          .bluetext()
      }
      .width('100%')
      .justifyContent(FlexAlign.SpaceBetween)
      .margin({top:8})
      Button('登录')
        .width('90%')
        .height(40)
        .fontSize(16)
        .fontWeight(FontWeight.Medium)
        .backgroundColor('#007DFF')
        .margin({top:48,bottom:12})
      Text('注册账号')
        .fontColor('#007DFF')
        .fontSize(16)
        .fontWeight(FontWeight.Medium)
      Text('其他登录方式')
        .fontColor('#838D97')
        .fontSize(12)
        .fontWeight(FontWeight.Medium)
        .margin({top:50,bottom:12})
      Row({space:44}){
        this.imagebutton($r('app.media.login_method1'))
        this.imagebutton($r('app.media.login_method2'))
        this.imagebutton($r('app.media.login_method3'))
      }
    }
    .height('100%')
    .width('100%')
    .backgroundColor('#F1F3F5')
    .padding({
      left:12,
      right:12,
      bottom:24
    })
  }
}